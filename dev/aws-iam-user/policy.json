{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "sagemaker:Describe*",
        "sagemaker:Get*",
        "sagemaker:List*",
        "servicecatalog:ListAcceptedPortfolioShares",
        "ec2:Describe*",
        "iam:ListRoles",
        "kms:ListAliases"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "sagemaker:CreatePresignedNotebookInstanceUrl",
        "sagemaker:StartNotebookInstance",
        "sagemaker:StopNotebookInstance",
        "sagemaker:DescribeNotebookInstance"
      ],
      "Resource": "arn:aws:sagemaker:*:*:notebook-instance/*${user_name}*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "sagemaker:UpdateNotebookInstance"
      ],
      "Resource": "arn:aws:sagemaker:*:*:notebook-instance/*${user_name}*",
      "Condition": {
        "ForAnyValue:StringEquals": {
          "sagemaker:InstanceTypes": [
            "ml.p2.xlarge",
            "ml.t3.xlarge"
          ]
        }
      }
    },
    {
      "Effect": "Allow",
      "Action": [
        "aws-portal:ViewBilling",
        "budgets:ViewBudget",
        "budgets:Describe*"
      ],
      "Resource": "*"
    }
  ]
}
